{
    "name": "westeast/easypay",
    "description": "专注 Alipay 和 WeChat 的支付扩展包",
    "keywords": ["alipay", "wechat", "pay"],
    "type": "library",
    "support": {
        "issues": "https://github.com/westeast/easypay/issues",
        "source": "https://github.com/westeast/easypay"
    },
    "authors": [
        {
            "name": "westeast",
            "email": "510578774@qq.com"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-openssl": "*",
        "ext-simplexml":"*",
        "ext-libxml": "*",
        "ext-json": "*",
        "yansongda/supports": "^2.0",
        "symfony/http-foundation": "^2.8 || ^3.0 || ^4.0",
        "symfony/event-dispatcher": "^3.0 || ^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "mockery/mockery": "^1.2",
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "autoload": {
        "psr-4": {
            "westeast\\EasyPay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "westeast\\EasyPay\\Tests\\": "tests"
        }
    },
    "license": "MIT"
}
